# Docker Environment Configuration for Private Publishing
# Copy this file to .env and modify according to your private setup

# Application Configuration
NODE_ENV=production
VITE_API_BASE_URL=https://api.medogram.ir
VITE_LOCAL_API_URL=http://127.0.0.1:8000

# Docker Registry Configuration (for private registry)
DOCKER_REGISTRY=your-private-registry.com
DOCKER_NAMESPACE=medogram
DOCKER_IMAGE_NAME=medogram-frontend
DOCKER_TAG=latest

# Security Configuration
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# Network Configuration
FRONTEND_PORT=3000
REDIS_PORT=6379
NGINX_PORT_HTTP=80
NGINX_PORT_HTTPS=443

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30